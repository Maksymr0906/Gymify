@using Newtonsoft.Json

@if (TempData["Success"] != null)
{
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            alertify.set('notifier','position', 'top-right');
            alertify.success('@TempData["Success"]');
        });
    </script>
}

