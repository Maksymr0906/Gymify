<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Gymify</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css">
</head>
<body>
    <header>
        <partial name="_Navbar" />
    </header>

    <main role="main">
        @RenderBody()
    </main>

    @* <footer class="border-top footer text-muted mt-4">
        <div class="container">
            &copy; @DateTime.Now.Year - Gymify
        </div>
    </footer> 
    *@

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/8.0.0/signalr.min.js"></script>

    @if (User.Identity.IsAuthenticated)
    {
            <script>
                // Ініціалізація з'єднання (один раз на весь додаток)
                const connection = new signalR.HubConnectionBuilder()
                    .withUrl("/notificationHub")
                    .withAutomaticReconnect() // Перепідключатись при втраті інтернету
                    .build();

                    connection.on("ReceiveNotification", function (data) {
                    console.log("🔔 New:", data);

                    // 1. Оновити лічильник
                    const badge = document.getElementById("ntBadge");
                    if (badge) {
                        let count = parseInt(badge.innerText) || 0;
                        count++;
                        badge.innerText = count;
                        badge.style.display = "flex"; // Показати

                        // Анімація пульсації (опціонально)
                        badge.style.transform = "scale(1.2)";
                        setTimeout(() => badge.style.transform = "scale(1)", 200);
                    }

                    // 2. Додати в список
                    const list = document.getElementById("ntList");
                    if (list) {
                        // Прибираємо напис "пусто", якщо він є
                        const empty = list.querySelector('.nt-empty');
                        if(empty) empty.remove();

                        // Генеруємо HTML нового елемента
                        const html = `
                            <a href="${data.link}" class="nt-item unread" onclick="readNotification('${data.id}')">
                                <span class="nt-msg">${data.message}</span>
                                <span class="nt-time">Just now</span>
                            </a>
                        `;

                        // Вставляємо на початок
                        list.insertAdjacentHTML('afterbegin', html);
                    }
                });

                // Старт з'єднання
                connection.start()
                    .then(() => console.log("✅ SignalR Connected"))
                    .catch(err => console.error("❌ SignalR Error:", err));
            </script>
    }

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>