<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Gymify</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css">
</head>
<body>
    <header>
        <partial name="_Navbar" />
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @* Футер розкоментуй за бажанням *@
    @* <footer class="border-top footer text-muted mt-4"> ... </footer> *@

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/8.0.0/signalr.min.js"></script>

    @if (User.Identity.IsAuthenticated)
    {
            <script>
                const connection = new signalR.HubConnectionBuilder()
                    .withUrl("/notificationHub")
                    .withAutomaticReconnect()
                    .build();

                connection.on("ReceiveNotification", function (data) {
                    console.log("🔔 Нове сповіщення!", data);
                    alert("Нове сповіщення: " + data.message);

                    // Якщо ти зробиш ViewComponent з дзвіночком, тут ми будемо оновлювати бейдж:
                    // updateNotificationBadge();
                });

                connection.start()
                    .then(() => console.log("✅ SignalR Connected"))
                    .catch(err => console.error("❌ SignalR Error:", err));
            </script>
    }

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>