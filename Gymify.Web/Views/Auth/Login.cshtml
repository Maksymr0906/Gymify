@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model Gymify.Application.DTOs.Auth.LoginRequestDto

@{
    ViewData["Title"] = "Login";
}

<div class="auth-page-wrapper">
    <div class="auth-card">
        <div class="auth-header">
            <h1 class="auth-title">Welcome Back</h1>
            <p class="auth-subtitle">Please enter your details to sign in</p>
        </div>

        <form asp-action="Login" method="post">
            <div class="form-group">
                <label asp-for="Email" class="auth-label">@Localizer["Email"]</label>
                <input asp-for="Email" class="gym-input" placeholder="name@example.com" required />
                <span asp-validation-for="Email" class="text-danger" style="font-size:12px;"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password" class="auth-label">@Localizer["Password"]</label>
                <input asp-for="Password" class="gym-input" placeholder="••••••" required type="password" />
                <span asp-validation-for="Password" class="text-danger" style="font-size:12px;"></span>
            </div>

            <div class="form-check">
                <input asp-for="RememberMe" class="form-check-input" />
                <label asp-for="RememberMe" class="form-check-label">
                    @Localizer["RememberMe"]
                </label>
            </div>

            <button type="submit" class="gym-btn gym-btn-primary w-100 scale-btn">
                @Localizer["LoginButton"]
            </button>
        </form>

        <div class="auth-footer">
            Don't have an account? 
            <a asp-action="Register" class="auth-link">Sign up</a>
        </div>
    </div>
</div>

@section Scripts {
        <partial name="_ValidationScriptsPartial" />
}