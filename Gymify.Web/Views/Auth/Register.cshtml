@model Gymify.Application.DTOs.Auth.RegisterRequestDto

@{
    ViewData["Title"] = "Register";
}

<form asp-action="Register" method="post" class="authForm">

    <label asp-for="Email" class="authText"></label>
    <input asp-for="Email" class="authInput" />
    <span asp-validation-for="Email" class="text-danger"></span>

    <label asp-for="UserName" class="authText"></label>
    <input asp-for="UserName" class="authInput" />
    <span asp-validation-for="UserName" class="text-danger"></span>

    <label asp-for="Password" class="authText"></label>
    <input asp-for="Password" class="authInput" type="password" />
    <span asp-validation-for="Password" class="text-danger"></span>

    <label asp-for="ConfirmPassword" class="authText"></label>
    <input asp-for="ConfirmPassword" class="authInput" type="password" />
    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>

    <label asp-for="FullName" class="authText"></label>
    <input asp-for="FullName" class="authInput" />
    <span asp-validation-for="FullName" class="text-danger"></span>

    <button type="submit" class="authButton scaleButton">Register</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
