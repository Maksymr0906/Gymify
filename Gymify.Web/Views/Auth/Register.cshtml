@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model Gymify.Application.DTOs.Auth.RegisterRequestDto

@{
    ViewData["Title"] = "Register";
}

<div class="auth-page-wrapper">
    <div class="auth-card">
        <div class="auth-header">
            <h1 class="auth-title">@Localizer["CreateAccount"]</h1>
            <p class="auth-subtitle">@Localizer["JoinUs"]</p>
        </div>

        <form asp-action="Register" method="post">
            <div class="form-group">
                <label asp-for="Email" class="auth-label">@Localizer["Email"]</label>
                <input asp-for="Email" class="gym-input" placeholder="name@example.com" />
                <span asp-validation-for="Email" class="text-danger" style="font-size:12px;"></span>
            </div>

            <div class="form-group">
                <label asp-for="UserName" class="auth-label">@Localizer["UserName"]</label>
                <input asp-for="UserName" class="gym-input" placeholder="YourNickname" />
                <span asp-validation-for="UserName" class="text-danger" style="font-size:12px;"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password" class="auth-label">@Localizer["Password"]</label>
                <input asp-for="Password" class="gym-input" type="password" placeholder="••••••" />
                <span asp-validation-for="Password" class="text-danger" style="font-size:12px;"></span>
            </div>

            <div class="form-group">
                <label asp-for="ConfirmPassword" class="auth-label">@Localizer["ConfirmPassword"]</label>
                <input asp-for="ConfirmPassword" class="gym-input" type="password" placeholder="••••••" />
                <span asp-validation-for="ConfirmPassword" class="text-danger" style="font-size:12px;"></span>
            </div>

            <button type="submit" class="gym-btn gym-btn-primary w-100 scale-btn" style="margin-top: 10px;">
                @Localizer["RegisterButton"]
            </button>
        </form>

        <div class="auth-footer">
            @Localizer["HaveAnAccount"]
            <a asp-action="Login" class="auth-link">@Localizer["SignIn"]</a>
        </div>
    </div>
</div>

@section Scripts {
        <partial name="_ValidationScriptsPartial" />
}