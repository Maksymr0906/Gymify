@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model Gymify.Application.DTOs.Auth.ResetPasswordDto

@{
    ViewData["Title"] = @Localizer["ResetPassword"];
}

<div class="auth-page-wrapper">
    <div class="auth-card">
        <div class="auth-header">
            <h1 class="auth-title">@Localizer["SetNewPassword"]</h1>
        </div>

        <form asp-action="ResetPassword" method="post">
            <input asp-for="Token" type="hidden" />
            <input asp-for="Email" type="hidden" />

            <div class="form-group">
                <label asp-for="Password" class="auth-label">@Localizer["NewPassword"]</label>
                <input asp-for="Password" class="gym-input" type="password" placeholder="••••••" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ConfirmPassword" class="auth-label">@Localizer["ConfirmNewPassword"]</label>
                <input asp-for="ConfirmPassword" class="gym-input" type="password" placeholder="••••••" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="gym-btn gym-btn-primary w-100 scale-btn" style="margin-top: 15px;">
                @Localizer["ChangePasswordButton"]
            </button>
        </form>
    </div>
</div>

@section Scripts {
     <partial name="_ValidationScriptsPartial" />
}