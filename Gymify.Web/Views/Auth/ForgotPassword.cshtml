@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model Gymify.Application.DTOs.Auth.ForgotPasswordDto

@{
    ViewData["Title"] = @Localizer["ForgotPassword"];
}

<div class="auth-page-wrapper">
    <div class="auth-card">
        <div class="auth-header">
            <h1 class="auth-title">@Localizer["ResetPassword"]</h1>
            <p class="auth-subtitle">@Localizer["EnterEmailToReset"]</p>
        </div>

        <form asp-action="ForgotPassword" method="post">
            <div class="form-group">
                <label asp-for="Email" class="auth-label">@Localizer["Email"]</label>
                <input asp-for="Email" class="gym-input" placeholder="name@example.com" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <button type="submit" class="gym-btn gym-btn-primary w-100 scale-btn" style="margin-top: 15px;">
                @Localizer["SendLinkButton"]
            </button>
        </form>

        <div class="auth-footer">
            <a asp-action="Login" class="auth-link">@Localizer["BackToLogin"]</a>
        </div>
    </div>
</div>

@section Scripts {
     <partial name="_ValidationScriptsPartial" />
}