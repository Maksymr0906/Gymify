@model List<Gymify.Application.DTOs.Comment.CommentAdminDto>
@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["PageTitle"];
}

<div class="ae-page-container">
    <h1 class="ae-page-title mb-4">@Localizer["Header_CommentModeration"]</h1>

    @if (Model.Count == 0)
    {
        <div class="friends-empty">
            <i class="fa-regular fa-comment-dots" style="color: #ccc;"></i>
            <p>@Localizer["Msg_NoPendingComments"]</p>
        </div>
    }
    else
    {
        <div class="co-list">
            @foreach (var c in Model)
            {
                <div class="ae-card-item mb-3" style="border-left: 4px solid var(--gym-orange);">
                    <div class="ae-card-header-title d-flex justify-content-between align-items-center">
                        <div>
                            <span style="color: #333; font-weight: 800;">@c.AuthorName</span> 
                            <span class="ae-text-muted" style="font-weight: 400; font-size: 0.9rem;">
                                @Localizer["Text_CommentedOn"] @c.TargetType <span style="color: var(--gym-orange);">#@c.TargetId</span>
                            </span>
                        </div>
                        <span class="ae-badge" style="background: #333; color: #fff;">@Localizer["Badge_Pending"]</span>
                    </div>

                    <form method="post" asp-action="Update" class="w-100 mt-2">
                        <input type="hidden" name="id" value="@c.Id" />
                        
                        <div class="form-group mb-3">
                            <label class="ae-label-mini" style="color: #555;">@Localizer["Label_Content"]</label>
                            <textarea name="content" class="ae-input-std ae-textarea-std">@c.Content</textarea>
                        </div>

                        <div class="d-flex justify-content-end">
                            <button type="submit" class="gym-btn gym-btn-secondary py-2 px-3" style="font-size: 0.85rem;">
                                <i class="fa-solid fa-floppy-disk me-2"></i> @Localizer["Btn_SaveChanges"]
                            </button>
                        </div>
                    </form>

                    <div class="ae-separator" style="margin: 15px 0;"></div>

                    <div class="d-flex flex-wrap gap-3 align-items-end justify-content-between">
                        <form method="post" asp-action="Reject" class="d-flex gap-2 flex-grow-1" style="max-width: 500px;">
                            <input type="hidden" name="id" value="@c.Id" />
                            <input name="reason" placeholder="@Localizer["Placeholder_RejectReason"]" class="ae-input-std" required />
                            <button class="gym-btn gym-btn-danger py-2 px-3">
                                @Localizer["Btn_Reject"]
                            </button>
                        </form>

                        <form method="post" asp-action="Approve">
                            <input type="hidden" name="id" value="@c.Id" />
                            <button class="gym-btn gym-btn-primary py-2 px-4">
                                @Localizer["Btn_Approve"]
                            </button>
                        </form>
                    </div>
                </div>
            }
        </div>
    }
</div>
