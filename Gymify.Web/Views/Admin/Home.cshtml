@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["PageTitle"];
}

<div class="ae-page-container">
    <div class="d-flex align-items-center gap-3 mb-4">
        <h1 class="ae-page-title m-0">@Localizer["Header_Dashboard"]</h1>
    </div>

    <p class="ae-text-muted mb-4">
        @Localizer["Desc_Welcome"]
    </p>

    <div class="admin-grid">
        <a asp-action="ExercisePanel" class="admin-card">
            <div class="admin-card-icon">
                <i class="fa-solid fa-dumbbell"></i>
            </div>
            <div class="admin-card-title">@Localizer["Card_Exercise_Title"]</div>
            <div class="admin-card-desc">@Localizer["Card_Exercise_Desc"]</div>
        </a>

        <a asp-action="CommentPanel" class="admin-card">
            <div class="admin-card-icon">
                <i class="fa-regular fa-comments"></i>
            </div>
            <div class="admin-card-title">@Localizer["Card_Comment_Title"]</div>
            <div class="admin-card-desc">@Localizer["Card_Comment_Desc"]</div>
        </a>

        <a asp-action="UserPanel" class="admin-card">
            <div class="admin-card-icon">
                <i class="fa-solid fa-users"></i>
            </div>
            <div class="admin-card-title">@Localizer["Card_User_Title"]</div>
            <div class="admin-card-desc">@Localizer["Card_User_Desc"]</div>
        </a>

        <a asp-action="WorkoutPanel" class="admin-card">
            <div class="admin-card-icon">
                <i class="fa-solid fa-fire"></i>
            </div>
            <div class="admin-card-title">@Localizer["Card_Workout_Title"]</div>
            <div class="admin-card-desc">@Localizer["Card_Workout_Desc"]</div>
        </a>
    </div>
</div>