@using Gymify.Application.DTOs.UserExercise
@model List<UserExerciseDto>

@{
    ViewData["Title"] = "Add Exercises";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">

            <div class="text-center mb-4">
                <h1 class="display-6">Наповнення воркауту</h1>
                <p class="text-muted">Додайте вправи, щоб завершити створення тренування.</p>
            </div>

            <partial name="_ExerciseManager" model="Model" />

            <div class="text-center mt-4">
                <a asp-action="Details" asp-route-workoutId="@ViewBag.WorkoutId" class="text-decoration-none text-secondary">
                    Завершити пізніше (Перейти до перегляду) &rarr;
                </a>
            </div>

        </div>
    </div>
</div>