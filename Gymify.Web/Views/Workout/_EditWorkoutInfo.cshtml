@using Gymify.Application.DTOs.Workout
@model UpdateWorkoutRequestDto

<div class="p-4 border rounded bg-light shadow-sm">
    <form id="workoutInfoForm" asp-action="UpdateWorkoutInfo" asp-controller="Workout" method="post">
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label class="form-label fw-bold">Workout Name</label>
            <input asp-for="Name" class="form-control form-control-lg" placeholder="E.g. Chest Day Destruction" />
            <span asp-validation-for="Name" class="text-danger small"></span>
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold">Description</label>
            <textarea asp-for="Description" class="form-control" rows="3" placeholder="Describe your workout goal..."></textarea>
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold">Conclusion</label>
            <textarea asp-for="Conclusion" class="form-control" rows="2" placeholder="How did it go? (Optional)"></textarea>
        </div>

        <div class="mb-3 form-check form-switch">
            <input class="form-check-input" type="checkbox" asp-for="IsPrivate" id="privacySwitch">
            <label class="form-check-label" for="privacySwitch">Private Workout (Visible only to me)</label>
        </div>

        <div class="d-flex justify-content-end gap-2">
            <button type="button" id="btnCancelInfo" class="btn btn-secondary">Cancel</button>
            <button type="submit" id="btnSaveInfo" class="btn btn-primary px-4">Save Info</button>
        </div>
    </form>
</div>