@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@using Gymify.Application.DTOs.UserExercise
@model List<UserExerciseDto>

@if (!Model.Any())
{
    <div style="text-align: center; padding: 40px; background: #f9f9f9; border-radius: 8px; color: #888; border: 2px dashed #ddd;">
        @Localizer["Msg_NoExercises"]
    </div>
}
else
{
    <div class="ae-cards-grid">
        @foreach (var ex in Model)
        {
            <div class="ae-card-item">
                <div class="ae-card-header-title">@ex.Name</div>

                <div class="ae-stat-row">
                    <span>@Localizer["Label_Sets"]: <strong>@ex.Sets</strong></span>
                    <span>@Localizer["Label_Reps"]: <strong>@ex.Reps</strong></span>
                </div>

                <div class="ae-card-stats">
                    @if (ex.Weight > 0)
                    {
                        <span>
                            <i class="fa-solid fa-dumbbell"></i> 
                            @ex.Weight @Localizer["Label_Kg"]
                        </span>
                    }
                    else
                    {
                        <span></span>
                    }

                    @if (ex.DurationMinutes > 0)
                    {
                        <span>
                            <i class="fa-regular fa-clock"></i> 
                            @ex.DurationMinutes @Localizer["Label_Min"]
                        </span>
                    }
                </div>
            </div>
        }
    </div>
}